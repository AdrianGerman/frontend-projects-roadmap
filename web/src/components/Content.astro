---
import projects from "../data/projects"

import GitHubIcon from "./icons/GitHubIcon.astro"
import DemoIcon from "./icons/DemoIcon.astro"
import DetailsIcon from "./icons/DetailsIcon.astro"
---

<section
  class="grid gap-8 mb-6 lg:mb-16 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 max-w-6xl mx-auto"
>
  {
    projects.map((project) => (
      <article class="relative items-center">
        <a href={project.demo}>
          <img
            class="w-full object-cover rounded-md mb-4 hover:scale-110 transition cursor-pointer"
            src={project.image}
            alt={project.title}
          />
        </a>
        <div>
          <h2 class="text-2xl font-bold text-gray-200 mb-2">{project.title}</h2>
          <p class="text-gray-500 text-base font-light mb-4">
            {project.description}
          </p>
          <ul class="flex flex-wrap gap-2 mb-4">
            {project.tags.map((tag) => (
              <li class="bg-blue-800/50 border border-blue-700/30 text-white text-xs font-medium px-3 py-1 rounded-full">
                {tag}
              </li>
            ))}
          </ul>
          <div class="flex lg:flex-nowrap flex-wrap gap-3 justify-start">
            <a
              class="inline-flex gap-1 items-center justify-center px-3 py-2 text-xs font-semibold text-center text-white bg-slate-950 transition border border-white/60 rounded-lg hover:bg-white/20 md:text-sm"
              href={project.repo}
              target="_blank"
            >
              <GitHubIcon />
              CÃ³digo
            </a>
            <a
              class="inline-flex items-center justify-center px-3 py-2 text-xs font-semibold text-center text-yellow-600 bg-slate-950 transition border border-yellow-600/60 rounded-lg hover:bg-yellow-500/20 md:text-sm"
              href={project.demo}
              target="_blank"
            >
              <DemoIcon />
              Demo
            </a>
            <a
              class="inline-flex gap-1 items-center justify-center px-3 py-2 text-xs font-semibold text-center text-white transition bg-slate-950 rounded-lg hover:bg-[#5865F2]/20 md:text-sm border border-[#5865F2]"
              href={project.details}
              target="_blank"
            >
              <DetailsIcon />
              Detalles
            </a>
          </div>
        </div>
      </article>
    ))
  }
</section>
